<form action="/customer/add" method="post">
  <label for="name">Customer Name</label><br>
  <input type="text" name="name">
  <label for="stylist-id">Primary stylist</label>
  <select name="stylist-id">
    <option value=0>Decide later</option>
    @foreach (var stylist in Model)
    {
      <option value=@stylist.GetId()>@stylist.GetName()</option>
    }
  </select>
  <button type="submit">Add to Client List</button>
</form>
